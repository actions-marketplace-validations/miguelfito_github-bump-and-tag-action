# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
# Must apply for all files
charset = utf-8
end_of_line = lf
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.js]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.ts]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.md]
# Must apply for markdown files
indent_style = space
trim_trailing_whitespace = false

[*.py]
# Must apply for python files
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
# Must apply for shell script files
binary_next_line = true   # like -bn
indent_size = 4           # like -i=4
indent_style = space      # like -i=4
keep_padding = true       # like -kp
shell_variant = posix     # like -ln=posix
space_redirects = true    # like -sr
switch_case_indent = true # like -ci
